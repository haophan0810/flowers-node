extends ../includes/admin.pug
block head-admin
  link(href='css/validateErr.css', rel='stylesheet')
  
block nav-admin
  // Main Navigation
  
  main.pt-5.mx-lg-5
    .container-fluid.mt-5

      // Default form contact
      form.border.border-light.p-5.wow.fadeIn(action='/admin/add-product', method='POST')
        .row
          .col-6
            h3.text-center Product
            // Name
            lable(for='productName') Product Name
            input#productName.form-control.mb-4(type='text'
            placeholder='Product name'
            name='productName')
            
            lable(for='productQuantity') Product Quantity
            input#productQuantity.form-control.mb-4(type='number'
              placeholder='Product quantity'
              name='productQuantity')

            lable(for='productDescription') Product Description
            .form-group
              textarea#productDescription.form-control.rounded-0(rows='3'
              placeholder='Product description'
              name='productDescription')
                
          .col-6
            h3 Product - image
            //- input#productIdImage.form-control.mb-4(type='number', placeholder='Product Id', name='productId')
            input#imageName.form-control.mb-4(type='text', placeholder='Image Name', name='imageName')
            input#imageSrc.form-control.mb-4(type='text', placeholder='Image src', name='imageSrc')

            hr

            h3 Product Discount
                                      
            .d-flex
              label(for="timeExpired").w-50.pt-2 Date Expiry:
              input#timeExpired.form-control.mb-4(type='datetime-local', placeholder='Date Expiry', name='timeExpired')
            .row
              .col-6
                input#basePrice.form-control.mb-4(type='number', placeholder='Discount value', name='discountValue')
              .col-6
                select.browser-default.custom-select.mb-4(name='isActiveDiscount')
                      option(value='', selected='') Active
                      option(value='true') true
                      option(value='false') false 
        .row
          .col-6
            h3 Product Pricing
            // Name
            //- input#productIdPricing.form-control.mb-4(type='number', placeholder='Product Id')
            // Email
            //- div.d-flex
            //-   label(for="dateStart").w-50.pt-2 Date Start:
            //-   input#dateStart.form-control.mb-4(type='datetime-local', placeholder='Date start', name='dateStart', value= new Date().getTime())
            //- .d-flex
            //-   label(for="dateExpiry").w-50.pt-2 Date Expiry:
            //-   input#dateExpiry.form-control.mb-4(type='datetime-local', placeholder='Date Expiry', name='dateExpiry')
            .row
              .col-6
                input#basePrice.form-control.mb-4(type='number', placeholder='Base Price', name='basePrice')
              .col-6
                select.browser-default.custom-select.mb-4(name='isActive')
                      option(value='', selected='') Active
                      option(value='true') true
                      option(value='false') false 
        .d-flex.justify-content-center              
          button.btn.bgBtnMain(type='submit') Add Product

  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  // Bootstrap tooltips
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js')
  // Bootstrap core JavaScript
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js')
  // MDB core JavaScript
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.1/js/mdb.min.js')
  // Initializations
  script(type='text/javascript').
    // Animations initialization
    new WOW().init();
