extends includes/layout.pug

mixin product(item)
    - const productStar = parseInt(item.productStar);
    - const productStarHalf = productStar < item.productStar? true : false
    .col-lg-3.mb-5        
        .card
            .card-img-top.product__relative
                a.card-link(href=`products/${item.productId}`)
                    img(src=item.productImage, alt=item.productName)
                    if item.state
                        .lable-promotion
                            .btn.btn-danger(class=item.state) #{item.state}
            .card-body
                a.card-link(href=`products/${item.productId}`)
                    h5.card-title #{item.star}
                p.card-text
                    - for(let i = 0 ; i<item.star; i++){
                        i.fas.fa-star.star--color
                    - }
                p.card-text
                    span #{item.productCost}               
                a.btn.btn-primary(href='#') Add to Cart
block head
    link(rel='stylesheet', href='../../css/style.css')

block nav
    
    main.container.products#products
        .container.mb-5.mt-5 #{category}     
        .row
            each value in response
                +product(value)



block footer