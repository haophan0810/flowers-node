  link(href='css/mdb.min.css', rel='stylesheet')
  // Your custom styles (optional)
  link(href='css/style.min.css', rel='stylesheet')
  link(href='css/admin.css', rel='stylesheet')

  style.
    .map-container {
    overflow: hidden;
    padding-bottom: 56.25%;
    position: relative;
    height: 0;
    }
    .map-container iframe {
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    position: absolute;
    }
  // Main Navigation
block head-admin
body
  header
    // Navbar
    nav.navbar.fixed-top.navbar-expand-lg.navbar-light.white.scrolling-navbar
      .container-fluid.d-flex.justify-content-end
        
          ul.navbar-nav.nav-flex-icons
          
            li.nav-item
              form.waves-effect(method='POST', action='/admin/logout')
                button.btn.bgBtnMain(type='submit') Logout
                  
    // Navbar
    // Sidebar
    .sidebar-fixed.position-fixed
      a(href='/').logo-wrapper.waves-effect
        img.img-fluid(src='https://res.cloudinary.com/haophan/image/upload/v1547865735/logo-2.png', alt='flowers-shop')
      
      .list-group.list-group-flush
        a.list-group-item.waves-effect.bgBtnMain.card(href='#')
          i.fas.fa-chart-pie.mr-3
          | Dashboard
        
        
        #accordionEx194.accordion.md-accordion.accordion-3(role='tablist', aria-multiselectable='true')          
          .card
            // Card header
            #heading1.card-header(role='tab')
              a(data-toggle='collapse', data-parent='#accordionEx194', href='#collapse1', aria-expanded='true', aria-controls='collapse4')
                h6.mb-0.itemAcordionActive              
                  i.fas.fa-archive.mr-1
                  | Categories
                  .animated-icon1.float-right.mt-1
                    i.fas.fa-angle-down
            // Card body
            #collapse1.collapse(role='tabpanel', aria-labelledby='heading1', data-parent='#accordionEx194')
              a(href="/admin/category-management").card-body.d-block.py-1.itemAcordion.itemAcordionActive
                span All Categories
              a(href="/admin/add-category").card-body.d-block.py-1.itemAcordion
                span Add Category
              a(href="/admin/category-management").card-body.d-block.py-1.itemAcordion
                span Category Detail
              
          .card
            // Card header
            #heading5.card-header(role='tab')
              a(data-toggle='collapse', data-parent='#accordionEx194', href='#collapse5', aria-expanded='true', aria-controls='collapse4')
                h6.mb-0.black-text
                  i.fab.fa-product-hunt.mr-1
                  | Products
                  .animated-icon1.float-right.mt-1
                    i.fas.fa-angle-down
            // Card body
            #collapse5.collapse.show(role='tabpanel', aria-labelledby='heading4', data-parent='#accordionEx194')
              a(href="/admin/products-management").card-body.d-block.py-1.itemAcordion
                span All Products
              a(href="/admin/add-product").card-body.d-block.py-1.itemAcordion
                span Add Product
              a(href="/admin/category-management").card-body.d-block.py-1.itemAcordion
                span Category Detail

